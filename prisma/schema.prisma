// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  folders   Folder[]

  @@map("users")
}

model Folder {
  id String @id @default(cuid())

  title String
  path  String?

  userId   String?
  parentId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])
  parent    Folder?  @relation("childFolders", fields: [parentId], references: [id], onDelete: Cascade)
  childrens Folder[] @relation("childFolders")
  files     File[]

  @@index([parentId], name: "idx_folder_parent_id")
  @@index([userId], name: "idx_folder_user_id")
  @@map("folders")
}

enum FileTypeEnum {
  NONE
  PLAIN_TEXT
}

model File {
  id String @id @default(cuid())

  type  FileTypeEnum
  title String

  createdById String
  folderId    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  folder Folder? @relation(fields: [folderId], references: [id])

  @@index([createdById], name: "idx_file_created_by_id")
  @@map("files")
}
